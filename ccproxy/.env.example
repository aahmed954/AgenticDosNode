# Claude Code Proxy Configuration Example
# Copy this file to .env and configure your settings

# ==================
# Server Configuration
# ==================
CCPROXY_HOST=0.0.0.0
CCPROXY_PORT=8000
CCPROXY_DEBUG=false
CCPROXY_LOG_LEVEL=INFO

# ==================
# Authentication
# ==================
# Options: api_key, bearer_token, oauth2, none
CCPROXY_AUTH_METHOD=api_key

# For API key authentication (comma-separated for multiple keys)
CCPROXY_API_KEYS=sk-ccproxy-your-secret-key-1,sk-ccproxy-your-secret-key-2

# For bearer token authentication
CCPROXY_BEARER_TOKEN=your-bearer-token-here

# For JWT/OAuth2 authentication
CCPROXY_JWT_SECRET=your-jwt-secret-key-here

# ==================
# Claude API Configuration
# ==================
# Your Anthropic API key (required)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# API base URL (usually don't change this)
ANTHROPIC_API_BASE=https://api.anthropic.com

# API version
ANTHROPIC_VERSION=2023-06-01

# ==================
# Rate Limiting
# ==================
# Requests per minute per API key
CCPROXY_RATE_LIMIT_RPM=60

# Tokens per minute per API key
CCPROXY_RATE_LIMIT_TPM=100000

# Maximum concurrent requests
CCPROXY_CONCURRENT_REQUESTS=10

# ==================
# Model Configuration
# ==================
# Default model if not specified in request
CCPROXY_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Supported models (comma-separated)
CCPROXY_SUPPORTED_MODELS=claude-3-5-sonnet-20241022,claude-3-5-haiku-20241022,claude-3-opus-20240229,claude-3-sonnet-20240229,claude-3-haiku-20240307

# Model limits
CCPROXY_MAX_TOKENS=4096
CCPROXY_TEMPERATURE=0.7
CCPROXY_TIMEOUT=300

# ==================
# Security and CORS
# ==================
# Enable CORS support
CCPROXY_ENABLE_CORS=true

# CORS origins (comma-separated, use * for all)
CCPROXY_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Maximum request size in bytes (1MB default)
CCPROXY_MAX_REQUEST_SIZE=1048576

# ==================
# Monitoring and Logging
# ==================
# Enable Prometheus metrics
CCPROXY_ENABLE_METRICS=true
CCPROXY_METRICS_PORT=8001

# Request/response logging
CCPROXY_LOG_REQUESTS=true
CCPROXY_LOG_RESPONSES=false  # Security: Keep false in production

# Health check interval in seconds
CCPROXY_HEALTH_INTERVAL=30

# ==================
# Redis Configuration (Optional)
# ==================
# Redis URL for caching and advanced rate limiting
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Cache settings
CCPROXY_ENABLE_CACHE=false
CCPROXY_CACHE_TTL=3600

# ==================
# Advanced Configuration
# ==================
# OpenAI model mapping (JSON format)
# Maps OpenAI model names to Claude models
CCPROXY_MODEL_MAPPING='{"gpt-4": "claude-3-5-sonnet-20241022", "gpt-4-turbo": "claude-3-5-sonnet-20241022", "gpt-4o": "claude-3-5-sonnet-20241022", "gpt-4o-mini": "claude-3-5-haiku-20241022", "gpt-3.5-turbo": "claude-3-5-haiku-20241022"}'

# Environment (development, staging, production)
ENVIRONMENT=production

# Proxy identification
CCPROXY_VERSION=1.0.0
CCPROXY_SERVICE_NAME=ccproxy